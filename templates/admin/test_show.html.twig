{# templates/admin/test_show.html.Twig #}

{% extends 'base.html.Twig' %}

{% block title %}Test Details{% endblock %}

{% block body %}
    <h1>Test Details</h1>

    <p><strong>Title:</strong> {{ test.title }}</p>
    <p><strong>Discipline:</strong> {{ test.discipline.name }}</p>
    <p><strong>Time Limit:</strong> {{ test.timeLimit }} minutes</p>
    <p><strong>Max Score:</strong> {{ test.maxScore }}</p>

    <h3>Questions:</h3>
    <ul>
        {% for question in test.questions %}
            <li>{{ question.text }}</li>
        {% endfor %}
    </ul>

    <!-- Edit button -->
    <a href="{{ path('admin_test_edit', { 'id': test.id }) }}" class="btn btn-warning">Edit Test</a>

    <a href="{{ path('admin') }}" class="btn btn-primary mt-3">Back to List</a>
{% endblock %}
